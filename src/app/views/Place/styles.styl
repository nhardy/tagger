@import '~app/assets/stylus'


.feed
  background: $_white
  padding-bottom: 10em

.item
  font-size: 18px
  white-space: pre-wrap
  word-wrap: break-word
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif
  padding: 1em
  color: #292f33

.text
  line-height: 18px
  border-bottom: 1px solid #e1e8ed

.caption
  font-size: 15px

.img
  width: 90%
  height: auto
  margin: 5%

.iconButton
  width: 120px

.center
  text-align: center

.toolbar
  align-content: center
  position: fixed
  bottom: 0
  left: 0
  width: 100%
  height: 6em
  background: #eee
  justify-content: center
  display: flex

.toolbarCtn
  display: flex
  align-items: center

.icon
  composes: materialIcon from 'app/assets/stylus/common.styl'


